{
  "name": "node-hono-drizzle-sql",
  "version": "0.1.0",
  "description": "This is a simple boilerplate of a Node app with Hono, Drizzle and SQL",
  "main": "src/index.ts",
  "author": "Md. Minar Munshi",
  "license": "ISC",
  "keywords": [
    "typescript",
    "nodejs",
    "hono",
    "drizzle",
    "postgreSQL"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "migrations:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "migrations:push": "drizzle-kit push --config=drizzle.config.ts",
    "migrations:drop": "drizzle-kit drop --config=drizzle.config.ts",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.3",
    "@t3-oss/env-core": "^0.10.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "hono": "^4.4.6",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "drizzle-kit": "^0.22.7",
    "pg": "^8.12.0",
    "tsx": "^4.15.5"
  }
}
